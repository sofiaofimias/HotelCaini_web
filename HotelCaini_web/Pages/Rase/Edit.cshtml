@page
@model HotelCaini_web.Pages.Rase.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editează lista raselor</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rasa.ID" />
            <div class="form-group">
                <label asp-for="Rasa.nume_rasa" class="control-label"></label>
                <input asp-for="Rasa.nume_rasa" class="form-control" />
                <span asp-validation-for="Rasa.nume_rasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la lista cu rasele câinilor</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
